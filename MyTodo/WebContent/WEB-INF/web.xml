<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>MyTodo</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Connexion</servlet-name>
    <servlet-class>servlets.Connexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Connexion</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Visualisation</servlet-name>
    <servlet-class>servlets.Visualisation</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Visualisation</servlet-name>
    <url-pattern>/visualisation</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Deconnexion</servlet-name>
    <servlet-class>servlets.Deconnexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Deconnexion</servlet-name>
    <url-pattern>/deconnexion</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ModifyTodo</servlet-name>
    <servlet-class>servlets.ModifyTodo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ModifyTodo</servlet-name>
    <url-pattern>/modifyTodo</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Suppression</servlet-name>
    <servlet-class>servlets.Suppression</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Suppression</servlet-name>
    <url-pattern>/suppression</url-pattern>
  </servlet-mapping>
  <servlet>
	<servlet-name>ModifyCompte</servlet-name>
	<servlet-class>servlets.ModifyCompte</servlet-class>
</servlet>
	<servlet-mapping>
		<servlet-name>ModifyCompte</servlet-name>
		<url-pattern>/modifyCompte</url-pattern>
	</servlet-mapping>
</web-app>
